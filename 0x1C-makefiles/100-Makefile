# Define variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

# Default rule to build the executable
all: $(NAME)

# Build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to clean up temporary files and the executable
clean:
	$(RM) *~ $(NAME)

# Rule to clean up object files
oclean:
	$(RM) $(OBJ)

# Rule to clean up all files including temporary files, executable, and object files
fclean: clean oclean

# Rule to force recompilation of all source files
re: fclean all

# Prevent the Makefile from working without the header file m.h
$(OBJ): m.h
