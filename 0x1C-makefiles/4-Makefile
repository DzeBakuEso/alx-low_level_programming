# Variables
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
RM = rm -f

# Default rule (all): builds the executable
all: $(NAME)

# Rule to create the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile source files into object files
main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c -o main.o

school.o: school.c m.h
	$(CC) $(CFLAGS) -c school.c -o school.o

# Clean rule: removes temporary files
clean:
	$(RM) *~

# Rule to delete object files only
oclean:
	$(RM) $(OBJ)

# Rule to delete everything: temp files, executable, and object files
fclean: clean oclean
	$(RM) $(NAME)

# Rebuild everything by deleting object files and executable
re: fclean all
