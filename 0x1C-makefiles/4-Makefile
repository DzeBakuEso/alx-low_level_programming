
# Variables
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
RM = rm -f

# Default rule (all): builds the executable
all: $(NAME)

# Rule to create the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rules for compiling object files explicitly (no wildcards)
main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c -o main.o

school.o: school.c m.h
	$(CC) $(CFLAGS) -c school.c -o school.o

# Rule to clean temporary files
clean:
	$(RM) *~ *.swp

# Rule to clean object files only
oclean:
	$(RM) $(OBJ)

# Rule to clean everything (object files, executable, temporary files)
fclean: clean
	$(RM) $(NAME)

# Rule to force a full recompilation
re: fclean all
